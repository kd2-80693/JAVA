
public class Solution04_a {
	public static void main(String[] args) {
		int num = 5;
		int temp = 0;
		for(int i = 0 ; i < num ; i ++) {
			for(int j = 0 ; j <= num+i ; j++) {
				if(j>=num-i && (i+temp)%2==0)
					System.out.print("*");
					else
						System.out.print(" ");
				temp++;
			}
		System.out.println("");
		}
	}
}
