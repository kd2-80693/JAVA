public class Solution04_b {
	public static void main(String[] args) {
		int num = 3;
		int temp = 0;
		boolean flag = true;
		for(int i = 1 ; i <=num ; i ++) {
			temp = 0;
			flag = true;
			for(int j = num+i-1 ; j <= 0; j--) {
				if((i+j)%2 == 0 && flag) {
					System.out.println("*");
					temp++;

					if(temp==i)
						flag = false;
				}
				else
				{
					System.out.println(" ");
				}
				
				
			}
		System.out.println("");
		}
	}
}
