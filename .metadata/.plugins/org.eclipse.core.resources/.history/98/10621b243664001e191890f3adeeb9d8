public class Solution04_b {
	public static void main(String[] args) {
		int num = 3;
		int temp = 0;
		for(int i = 0 ; i < num ; i ++) {
			for(int j = 0 ; j <= num+i-1 ; j++) {
				if(j>=num-i )
					System.out.print("*");
					else
						System.out.print(" ");
				
			}
		System.out.println("");
		}
	}
}
